{% use "@FOSUser/blocks.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    {{ block('fos_error') }}
    {{ block('begin_fos_row') }}
        <div class="form-group">
            <label for="username" class="control-label required">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
        </div>    
    {{ block('close_fos_row') }}
    {{ block('begin_fos_row') }}
        <div class="form-group">
            <label for="password" class="control-label required">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" class="form-control" name="_password" required="required" />
        </div>
    {{ block('close_fos_row') }}
    {{ block('begin_fos_row') }}
        <div class="form-check">
            <label class="form-check-label">                   
                <input type="checkbox" name="_remember_me" value="on" class="form-check-input"/>
                {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
    {{ block('close_fos_row') }}
    {{ block('begin_fos_row') }}
        <div class="col text-center py-2">
            <input type="submit" id="_submit" class="btn btn-info" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>    
    {{ block('close_fos_row') }}
    {{ block('begin_fos_row') }}
        {% if error %}
            <div class="alert alert-primary" role="alert" ><a href="{{ path("fos_user_resetting_request") }}" class="alert-link"><span class="far fa-user mr-2"></span>{{ 'resetting.reset.submit'|trans }}</a></div>
        {% endif %}    
    {{ block('close_fos_row') }}
</form>
